---
import type { Value } from '@/data/values';
import Icon from '@/components/ui/Icon.astro';

interface Props extends Value {
  stagger?: number;
}

const { icon, title, description, stagger = 0 } = Astro.props;
---

<article
  class:list={['value-card', 'scroll-animate', { [`stagger-${stagger}`]: stagger > 0 }]}
>
  <!-- Liquid Glass Background -->
  <div class="card-glass"></div>

  <div class="card-content">
    <div class="value-icon">
      <div class="icon-glow"></div>
      <Icon name={icon} size={28} />
    </div>
    <h3 class="value-title">{title}</h3>
    <p class="value-description">{description}</p>
  </div>
</article>

<style>
  .value-card {
    position: relative;
    text-align: center;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    transition: transform var(--transition-base);
  }

  .value-card:hover {
    transform: translateY(-4px);
  }

  /* Liquid Glass Effect */
  .card-glass {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      145deg,
      rgba(255, 255, 255, 0.04) 0%,
      rgba(255, 255, 255, 0.01) 50%,
      rgba(255, 255, 255, 0.03) 100%
    );
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: var(--radius-2xl);
    transition: all var(--transition-base);
  }

  .value-card:hover .card-glass {
    background: linear-gradient(
      145deg,
      rgba(255, 255, 255, 0.06) 0%,
      rgba(255, 255, 255, 0.02) 50%,
      rgba(255, 255, 255, 0.04) 100%
    );
    border-color: rgba(255, 255, 255, 0.1);
    box-shadow:
      0 16px 40px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.06);
  }

  .card-content {
    position: relative;
    z-index: 1;
    padding: var(--space-8) var(--space-6);
  }

  .value-icon {
    position: relative;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-xl);
    margin-inline: auto;
    margin-bottom: var(--space-5);
    color: var(--color-white);
    transition: all var(--transition-base);
  }

  .icon-glow {
    position: absolute;
    inset: -20%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.15), transparent 60%);
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .value-card:hover .icon-glow {
    opacity: 1;
  }

  .value-card:hover .value-icon {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.08) 100%
    );
    border-color: rgba(255, 255, 255, 0.15);
    transform: scale(1.05);
  }

  .value-title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: var(--space-3);
    line-height: 1.3;
  }

  .value-description {
    font-size: var(--font-size-sm);
    color: var(--color-white-50);
    line-height: 1.7;
    max-width: 280px;
    margin-inline: auto;
  }

  @media (max-width: 768px) {
    .card-content {
      padding: var(--space-6);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .value-card,
    .card-glass,
    .value-icon,
    .icon-glow {
      transition: none;
    }

    .value-card:hover {
      transform: none;
    }

    .value-card:hover .value-icon {
      transform: none;
    }
  }
</style>
