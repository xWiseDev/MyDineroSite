---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  fullWidth?: boolean;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  fullWidth = false,
  class: className = ''
} = Astro.props;

const Tag = href ? 'a' : 'button';
const isExternal = href?.startsWith('http');

// Prefix internal paths with BASE_URL
const resolvedHref = href?.startsWith('/') ? `${import.meta.env.BASE_URL}${href.slice(1)}` : href;
---

<Tag
  class:list={['btn', `btn-${variant}`, `btn-${size}`, { 'btn-full': fullWidth }, className]}
  href={resolvedHref}
  type={!href ? type : undefined}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noopener noreferrer' : undefined}
>
  <span class="btn-content">
    <slot />
  </span>
  <span class="btn-glow" aria-hidden="true"></span>
</Tag>

<style>
  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    font-family: inherit;
    font-weight: 600;
    text-decoration: none;
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    overflow: hidden;
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast);
  }

  .btn-content {
    position: relative;
    z-index: 1;
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .btn-glow {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity var(--transition-fast);
    pointer-events: none;
  }

  .btn:focus-visible {
    outline: 2px solid var(--color-white);
    outline-offset: 2px;
  }

  /* Sizes */
  .btn-sm {
    height: 36px;
    padding-inline: var(--space-4);
    font-size: var(--font-size-sm);
  }

  .btn-md {
    height: 44px;
    padding-inline: var(--space-6);
    font-size: var(--font-size-base);
  }

  .btn-lg {
    height: 52px;
    padding-inline: var(--space-8);
    font-size: var(--font-size-lg);
  }

  /* Primary Variant */
  .btn-primary {
    background: var(--color-white);
    color: var(--color-black);
    box-shadow:
      0 0 0 0 rgba(255, 255, 255, 0),
      0 4px 12px rgba(0, 0, 0, 0.15);
  }

  .btn-primary .btn-glow {
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.3) 0%,
      transparent 70%
    );
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow:
      0 0 30px rgba(255, 255, 255, 0.25),
      0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .btn-primary:hover .btn-glow {
    opacity: 1;
  }

  .btn-primary:active {
    transform: translateY(0);
    box-shadow:
      0 0 15px rgba(255, 255, 255, 0.15),
      0 2px 8px rgba(0, 0, 0, 0.15);
  }

  /* Secondary Variant */
  .btn-secondary {
    background-color: rgba(255, 255, 255, 0.05);
    color: var(--color-white);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .btn-secondary .btn-glow {
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 70%
    );
  }

  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .btn-secondary:hover .btn-glow {
    opacity: 1;
  }

  .btn-secondary:active {
    transform: translateY(0);
  }

  /* Ghost Variant */
  .btn-ghost {
    background-color: transparent;
    color: var(--color-white);
  }

  .btn-ghost:hover {
    background-color: rgba(255, 255, 255, 0.08);
  }

  .btn-ghost:active {
    background-color: rgba(255, 255, 255, 0.12);
  }

  /* Full Width */
  .btn-full {
    width: 100%;
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .btn,
    .btn-glow {
      transition: none;
    }

    .btn:hover {
      transform: none;
    }
  }
</style>
