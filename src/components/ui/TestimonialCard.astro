---
import type { Testimonial } from '@/data/testimonials';

interface Props extends Testimonial {
  class?: string;
}

const { quote, author, rating, class: className = '' } = Astro.props;

const stars = Array(5).fill(null);
---

<article class:list={['testimonial-card', className]}>
  <div class="card-content">
    <!-- Opening quote mark -->
    <div class="quote-mark" aria-hidden="true">"</div>

    <blockquote class="testimonial-quote">{quote}</blockquote>

    <footer class="testimonial-footer">
      <div class="testimonial-meta">
        <span class="testimonial-author">{author}</span>
        <div class="testimonial-stars" role="img" aria-label={`${rating} out of 5 stars`}>
          {stars.map((_, i) => (
            <span class:list={['star', { filled: i < rating }]} aria-hidden="true">â˜…</span>
          ))}
        </div>
      </div>
    </footer>
  </div>
</article>

<style>
  .testimonial-card {
    position: relative;
    border-radius: var(--radius-2xl);
    min-width: 320px;
    max-width: 360px;
    flex-shrink: 0;
    overflow: hidden;
    background: linear-gradient(
      145deg,
      rgba(255, 255, 255, 0.06) 0%,
      rgba(255, 255, 255, 0.02) 50%,
      rgba(255, 255, 255, 0.04) 100%
    );
    border: 1px solid rgba(255, 255, 255, 0.08);
    /* Isolate to prevent rendering issues */
    isolation: isolate;
    contain: layout paint;
  }

  .card-content {
    position: relative;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    min-height: 220px;
  }

  /* Large quote mark */
  .quote-mark {
    position: absolute;
    top: var(--space-3);
    left: var(--space-5);
    font-size: 3.5rem;
    font-family: Georgia, 'Times New Roman', serif;
    line-height: 1;
    color: rgba(255, 255, 255, 0.06);
    user-select: none;
    pointer-events: none;
  }

  .testimonial-quote {
    font-size: var(--font-size-sm);
    color: var(--color-white-70);
    line-height: 1.75;
    font-style: normal;
    font-weight: 400;
    flex: 1;
    display: flex;
    align-items: center;
    padding-top: var(--space-2);
  }

  .testimonial-footer {
    padding-top: var(--space-4);
    margin-top: auto;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .testimonial-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .testimonial-author {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-white-50);
  }

  .testimonial-stars {
    display: flex;
    gap: 2px;
  }

  .star {
    font-size: 11px;
    color: rgba(255, 255, 255, 0.15);
  }

  .star.filled {
    color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 480px) {
    .testimonial-card {
      min-width: 280px;
      max-width: 320px;
    }

    .card-content {
      padding: var(--space-5);
      min-height: 200px;
    }

    .quote-mark {
      font-size: 3rem;
    }
  }
</style>
