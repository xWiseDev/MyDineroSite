---
import AppStoreBadge from '@/components/ui/AppStoreBadge.astro';
---

<section class="section final-cta">
  <!-- Ambient Background -->
  <div class="cta-bg">
    <div class="cta-orb cta-orb-1"></div>
    <div class="cta-orb cta-orb-2"></div>
    <div class="cta-grid"></div>
  </div>

  <div class="container">
    <div class="cta-card scroll-animate">
      <!-- Liquid Glass Background -->
      <div class="card-glass"></div>

      <div class="card-content">
        <span class="cta-eyebrow">Ready to start?</span>

        <h2 class="cta-title">
          Take Control of Your<br />
          <span class="title-highlight">Spending Today</span>
        </h2>

        <p class="cta-subtitle">
          Join thousands who finally understand where their money goes.
          No sign-up required. Start tracking in seconds.
        </p>

        <div class="cta-action">
          <AppStoreBadge />
        </div>

        <p class="cta-note">
          Available on iPhone and iPad
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .final-cta {
    position: relative;
    background-color: var(--color-black);
    overflow: hidden;
  }

  /* Ambient Background */
  .cta-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .cta-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
  }

  .cta-orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.06), transparent 60%);
    top: -20%;
    left: -10%;
  }

  .cta-orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.05), transparent 60%);
    bottom: -20%;
    right: -10%;
  }

  .cta-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.015) 1px, transparent 1px);
    background-size: 40px 40px;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
  }

  .cta-card {
    position: relative;
    max-width: 640px;
    margin-inline: auto;
    border-radius: var(--radius-2xl);
    overflow: hidden;
  }

  /* Liquid Glass Effect */
  .card-glass {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      145deg,
      rgba(255, 255, 255, 0.06) 0%,
      rgba(255, 255, 255, 0.02) 50%,
      rgba(255, 255, 255, 0.04) 100%
    );
    backdrop-filter: blur(30px);
    -webkit-backdrop-filter: blur(30px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-2xl);
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.06);
  }

  .card-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--space-12) var(--space-8);
  }

  .cta-eyebrow {
    display: inline-block;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-white-50);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: var(--space-4);
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-4);
  }

  .title-highlight {
    position: relative;
    display: inline-block;
  }

  .title-highlight::after {
    content: '';
    position: absolute;
    bottom: 0.1em;
    left: 0;
    right: 0;
    height: 0.1em;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.1));
    border-radius: var(--radius-full);
  }

  .cta-subtitle {
    font-size: var(--font-size-base);
    color: var(--color-white-60);
    margin-bottom: var(--space-8);
    max-width: 480px;
    margin-inline: auto;
    line-height: 1.7;
  }

  .cta-action {
    display: flex;
    justify-content: center;
    margin-bottom: var(--space-4);
  }

  .cta-note {
    font-size: var(--font-size-sm);
    color: var(--color-white-40);
    text-align: center;
  }

  @media (max-width: 640px) {
    .card-content {
      padding: var(--space-8) var(--space-6);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .cta-orb {
      animation: none;
    }
  }
</style>
