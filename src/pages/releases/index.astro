---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const releases = await getCollection('releases');
const sortedReleases = releases.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}

function getChangeTypeIcon(type: string): string {
  switch (type) {
    case 'feature': return '‚ú®';
    case 'improvement': return '‚ö°';
    case 'fix': return 'üêõ';
    default: return '‚Ä¢';
  }
}
---

<BaseLayout
  title="Release Notes"
  description="See what's new in MyDinero. Latest features, improvements, and bug fixes for our expense tracking app."
>
  <div class="releases-page">
    <div class="container">
      <header class="page-header">
        <h1>Release Notes</h1>
        <p class="page-subtitle">
          See what's new in MyDinero. We're constantly improving based on your feedback.
        </p>
      </header>

      <div class="releases-list">
        {sortedReleases.map((release) => (
          <article class="release-card">
            <header class="release-header">
              <div class="release-meta">
                <span class="release-version">v{release.data.version}</span>
                <span class="release-date">{formatDate(release.data.date)}</span>
              </div>
              <h2 class="release-title">{release.data.title}</h2>
            </header>

            {release.data.highlights.length > 0 && (
              <div class="release-highlights">
                <h3>Highlights</h3>
                <ul>
                  {release.data.highlights.map((highlight) => (
                    <li>{highlight}</li>
                  ))}
                </ul>
              </div>
            )}

            <div class="release-changes">
              <h3>Changes</h3>
              <ul>
                {release.data.changes.map((change) => (
                  <li class={`change-${change.type}`}>
                    <span class="change-icon">{getChangeTypeIcon(change.type)}</span>
                    <span class="change-type">{change.type}</span>
                    <span class="change-description">{change.description}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/releases/${release.slug}`} class="release-link">
              Read full release notes ‚Üí
            </a>
          </article>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .releases-page {
    padding-top: calc(72px + var(--space-16));
    padding-bottom: var(--space-16);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .page-header h1 {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-4);
  }

  .page-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-white-70);
    max-width: 560px;
    margin-inline: auto;
  }

  .releases-list {
    max-width: 720px;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .release-card {
    background-color: var(--color-gray-800);
    border: 1px solid var(--color-white-10);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
  }

  .release-header {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-white-10);
  }

  .release-meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-2);
  }

  .release-version {
    background: var(--gradient-green);
    color: var(--color-black);
    font-size: var(--font-size-sm);
    font-weight: 700;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
  }

  .release-date {
    font-size: var(--font-size-sm);
    color: var(--color-white-50);
  }

  .release-title {
    font-size: var(--font-size-xl);
    font-weight: 600;
  }

  .release-highlights,
  .release-changes {
    margin-bottom: var(--space-4);
  }

  .release-highlights h3,
  .release-changes h3 {
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-white-50);
    margin-bottom: var(--space-3);
  }

  .release-highlights ul {
    list-style: none;
  }

  .release-highlights li {
    position: relative;
    padding-left: var(--space-5);
    margin-bottom: var(--space-2);
    color: var(--color-white-70);
  }

  .release-highlights li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--color-green-500);
  }

  .release-changes ul {
    list-style: none;
  }

  .release-changes li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
    font-size: var(--font-size-sm);
  }

  .change-icon {
    flex-shrink: 0;
  }

  .change-type {
    flex-shrink: 0;
    font-weight: 600;
    text-transform: capitalize;
    min-width: 90px;
  }

  .change-feature .change-type { color: var(--color-green-500); }
  .change-improvement .change-type { color: #FFD700; }
  .change-fix .change-type { color: #FF6B6B; }

  .change-description {
    color: var(--color-white-70);
  }

  .release-link {
    display: inline-block;
    margin-top: var(--space-4);
    color: var(--color-green-500);
    font-weight: 500;
    font-size: var(--font-size-sm);
  }

  .release-link:hover {
    color: var(--color-green-400);
  }
</style>
